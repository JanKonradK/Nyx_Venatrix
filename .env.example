# Nyx Venatrix Environment Template
# Copy this file to `.env` and fill in the required secrets before running the stack.

# === LLM CONFIGURATION ===
GROK_API_KEY=
AGENT_MODEL=grok-4-1-fast-reasoning
AGENT_MODEL_TEMPERATURE=0.7
OPENAI_API_KEY=
EMBEDDING_MODEL=text-embedding-3-small

# === DATABASE ===
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nyx_venatrix
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=nyx_venatrix

# === REDIS & QUEUES ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# === VECTOR STORE ===
QDRANT_URI=http://localhost:6333
QDRANT_API_KEY=

# === CAPTCHA ===
TWOCAPTCHA_API_KEY=

# === BROWSER AUTOMATION ===
BROWSER_CHANNEL=chrome
BROWSER_MODE=auto
HEADLESS_BROWSER=false
CHROME_CDP_URL=
BROWSER_TIMEOUT_MS=60000

# === STEALTH / RATE LIMITING ===
ENABLE_RATE_LIMITING=true
ENABLE_STEALTH_MODE=true
MIN_APP_DELAY_SECONDS=30
MAX_APP_DELAY_SECONDS=180

# === NOTIFICATIONS ===
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
DIGEST_EMAIL_TO=

# === SESSION LIMITS ===
MAX_SESSION_HOURS=2
MAX_SESSION_APPLICATIONS=200
MAX_DAILY_APPLICATIONS=300
MAX_CONCURRENT_WORKERS=5

# === OBSERVABILITY ===
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com
MLFLOW_TRACKING_URI=file:///app/mlruns

# === OPTIONAL INTEGRATIONS ===
VIBESURF_API_KEY=
KDB_LICENSE_B64=
KDB_HOST=localhost
KDB_PORT=5000

# === APPLICATION URLS ===
BACKEND_URL=http://localhost:3000
AGENT_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# === GENERAL APP CONFIG ===
PORT=3000
NODE_ENV=development
LOG_LEVEL=INFO
JWT_SECRET=change-me-in-production
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
